<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>MiniTemplator</title>
    <parser>
        <target>docs/output</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>docs/output</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>docs/logs/{DATE}.log</default>
            <errors>docs/logs/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>src</directory>
    </files>
</phpdoc>
